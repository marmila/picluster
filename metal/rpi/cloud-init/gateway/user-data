#cloud-config

# Set TimeZone and Locale
timezone: Europe/Rome
locale: en_EN.UTF-8

# Hostname
hostname: gateway

# cloud-init not managing hosts file. only hostname is added
manage_etc_hosts: localhost

users:
  # not using default ubuntu user
  - name: marmila
    primary_group: users
    groups: [adm, admin]
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    lock_passwd: true
    ssh_authorized_keys:
          - ssh-rsa  runner@d28e295fc7c4
      - ssh-rsa  marmila@gateway


## Reboot to enable Wifi configuration (more details in network-config file)
power_state:
  mode: reboot

