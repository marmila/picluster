#cloud-config
autoinstall:
  version: 1
  keyboard:
    layout: it
  ssh:
    allow-pw: false
    install-server: true
  network:
    {{ hostvars[x86_host].autoinstall.network | to_nice_yaml | indent(4) }}
  storage:
    {{ hostvars[x86_host].autoinstall.storage | to_nice_yaml | indent(4) }}

  user-data:
    # Set TimeZone and Locale
    timezone: Europe/Rome
    locale: en_US.UTF-8

    # Hostname
    hostname: {{ x86_host }}

    # cloud-init not managing hosts file. only hostname is added
    manage_etc_hosts: localhost

    users:
      - name: marmila
        primary_group: users
        groups: [adm, admin]
        shell: /bin/bash
        sudo: ALL=(ALL) NOPASSWD:ALL
        lock_passwd: true
        ssh_authorized_keys:
          - ssh-rsa  marmila@node-esp-1
          - ssh-rsa  runner@d28e295fc7c4

